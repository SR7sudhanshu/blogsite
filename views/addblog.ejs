<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog</title>
    <style>
        /* General Styling */
        body {
            background-color: #111827;
            font-family: 'Arial', sans-serif;
            color: #f1f1f1;
        }

        .container {
            width: 80%;
            margin: 30px auto;
            background-color: #1f2937;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .form-label {
            font-size: 16px;
            font-weight: 600;
            color: #ccc;
        }

        .form-control {
            background-color: #2d3748;
            border: none;
            border-radius: 8px;
            color: #f1f1f1;
            padding: 12px;
            width: 100%;
            margin-top: 10px;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: #4CAF50;
            background-color: #1e2937;
            outline: none;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        .btn {
            background-color: #4CAF50;
            color: #fff;
            padding: 12px 25px;
            font-size: 16px;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #45a049;
        }

        .btn:focus {
            outline: none;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

        .file-input {
            background-color: #2d3748;
            padding: 10px;
            border-radius: 8px;
            border: none;
            width: 100%;
            margin-top: 10px;
            color: #fff;
            font-size: 14px;
            cursor: pointer;
            display: block;
            position: relative;
        }

        .file-input input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .file-input label {
            display: block;
            padding: 10px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
        }

        .file-input label:hover {
            background-color: #1e2937;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                width: 90%;
                padding: 15px;
            }

            .btn {
                font-size: 14px;
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container">
        <h2 class="text-center mb-4">Add a New Blog</h2>
        <form action="/dumps/addblog" method="post" enctype="multipart/form-data">
            <!-- Cover Image -->
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <div class="file-input">
                    <input required type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage" />
                    <label for="coverImage">Choose a Cover Image</label>
                </div>
            </div>

            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input required type="text" class="form-control" id="title" name="title" aria-describedby="title" />
            </div>

            <!-- Body -->
            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea required name="body" class="form-control" id="body" rows="6"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <%- include('./partials/script') %>
</body>
</html>
